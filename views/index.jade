extends layout

block content
	h1= title
	//- p Welcome to #{title}
	p
		#user
			if user && user.new_user==false
				div(class="user-card")
					div(class="user-data")
						<img src="#{user.picture}"> 
						span -You have logged in
						br
						span FbID: #{user.fbid}
						br
						span Name: #{user.firstname} #{user.lastname}
						br
						span Username/Email: #{user.username}
						br
						span profile: ---
						//-<a href="#{user.profileUrl}">#{user.profileUrl}</a>
						br
						div(class="clear")
						br
						a(href="/blogpost") blogposts
						br
						a(href="/change") change account dates
				a(href="auth/sign-out", class="sign-out") log out ←
			else if user && user.new_user==true
				p.
					You have successfully registered 
					<br>
					See your account: <a href='/auth/fb'>Here</a>
					<br>
					Or go to the homepage: <a href='auth/sign-out'>Homepage</a>
			else
				a(href="/register") register Page
				br
				a(href="/login") login Page
				br
				a(href="/auth/fb") Authenticate with facebook →
